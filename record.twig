 {% include '_header.twig' %}

<div class="container well"> 

<h1>{{ record.title  }}</h1>    

<hr> 



  <div id="record-content" style="margin:4px" width:100%; height:100%>
        {% if record.image !="" %}
        <img class="img-responsive" src="{{ thumbnail(record.image, 600, 300)}}" alt="{{ record.title }}" >
      {% else %}
        <img class="img-responsive" src="holder.js/600x300?text=No Image&bg=fff&outline=yes" alt="{{ record.title }}" > 
      {% endif %}
  </div>

<hr>
 {{ record.body }}
{{ __('Written by <em>%name%</em> on %date%',{ '%name%': record.user.displayname, '%date%': recdate }) }} <br>

       {% include '_sub_taxonomylinks.twig' with {record: record} %}

</div>



